{
  "name": "@toye.io/weewoo",
  "version": "0.0.0",
  "author": "Thomas Toye",
  "license": "GPL-3.0-or-later",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "build": "tsc --build packages && lerna run build",
    "build:watch": "yarn build && tsc --build packages --watch",
    "lint": "eslint '**/*.{js,ts}' --ignore-path .gitignore --fix && lerna run lint",
    "ci:lint": "eslint '**/*.{js,ts}' --ignore-path .gitignore && lerna run lint",
    "test": "yarn ci:lint && lerna run test",
    "start-eventstore": "docker-compose up",
    "start-eventstore-clean": "rm -rf eventstore-data && mkdir -p eventstore-data/data && mkdir -p eventstore-data/index && mkdir -p eventstore-data/logs && yarn start-eventstore"
  },
  "workspaces": [
    "packages/*"
  ]
}
